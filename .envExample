# Database bağlantı URL'si
DATABASE_URL=postgresql://username:password@host:port/dbname

# Firebase servis hesabı json dosyasının yolu
FIREBASE_CREDENTIALS_PATH=backend/firebase/focusflow-2e4d7-firebase-adminsdk-fbsvc-xxxxxxx.json

# Gemini API anahtarı
GEMINI_API_KEY=your_gemini_api_key_here

# JWT için gizli anahtarlar
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
REFRESH_SECRET_KEY=your_refresh_secret_key_here

# Token süreleri
ACCESS_TOKEN_EXPIRE_MINUTES=600
REFRESH_TOKEN_EXPIRE_DAYS=7

# SMTP ayarları (e-posta gönderimi için)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@example.com
SENDER_PASSWORD=your_email_password_here

# Celery ve Redis ayarları
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Google Calendar entegrasyon dosyalarının yolları
GOOGLE_CLIENT_SECRET_PATH=backend/google_calendar_integration/client_secret_xxxxxxxx.json
GOOGLE_TOKEN_FILE=backend/google_calendar_integration/token.json
